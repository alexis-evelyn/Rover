<?xml version="1.0" encoding="utf-8"?>
<OpenSearchDescription xmlns="https://a9.com/-/spec/opensearch/1.1/" xmlns:moz="https://www.mozilla.org/2006/browser/search/">
    <!-- Name -->
    <ShortName>Rover</ShortName>
    <LongName>Rover Tweet Search</LongName>

    <!-- Description -->
    <Description>Search Rover Tweets</Description>

    <!-- Icons -->
    <!--<Image height="16" width="16" type="image/x-icon"></Image>-->
    <Image height="64" width="64" type="image/png">/images/rover.png</Image>

    <!-- Search Query Encoding -->
    <InputEncoding>UTF-8</InputEncoding>

    <!-- Search URLs -->
    <Url type="text/html" method="get" template="/search?q={searchTerms}"/>
    <Url type="application/x-suggestions+json" template="/api/search/suggestions?q={searchTerms}"/>
    <moz:SearchForm>/search</moz:SearchForm>

    <Url type="text/html" template="/search">
        <Param name="q" value="{searchTerms}"/>
    </Url>

    <!-- Auto-Update URL -->
    <Url type="application/opensearchdescription+xml" rel="self" template="/opensearch.xml" />
</OpenSearchDescription>